<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_app" >
    	<include layout="@layout/header_view"/>
    	<LinearLayout
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="vertical">
    	    	<ImageView
    	    	    android:id="@+id/shop_info_image"
    	    	    android:layout_width="fill_parent"
    	    	    android:layout_height="wrap_content"
    	    	    android:background="@drawable/a7bcad2642b48513fe9bd4bffec"/>
    	    	<LinearLayout
    	    	    android:layout_width="fill_parent"
    	    	    android:layout_height="60dip"
    	    	    android:background="@color/yellow">
    	    	    	<RelativeLayout
    	    	    	    android:layout_width="wrap_content"
    	    	    	    android:layout_height="fill_parent"
    	    	    	    android:background="@color/red"
    	    	    	    android:layout_weight="6">
    	    	    	    	<ImageView
		    	    	    	    android:layout_width="wrap_content"
		    	    	    	    android:layout_height="wrap_content"
		    	    	    	    android:layout_centerInParent="true"/>
    	    	    	</RelativeLayout>
    	    	    	<RelativeLayout
    	    	    	    android:layout_width="wrap_content"
    	    	    	    android:layout_height="fill_parent"
    	    	    	    android:background="@color/yellow"
    	    	    	    android:layout_weight="1">
    	    	    	    	<ImageView
		    	    	    	    android:layout_width="wrap_content"
		    	    	    	    android:layout_height="wrap_content"
		    	    	    	    android:background="@drawable/profile_grid"
		    	    	    	    android:layout_centerInParent="true"/>
    	    	    	</RelativeLayout>
    	    	    	<RelativeLayout
    	    	    	    android:layout_width="wrap_content"
    	    	    	    android:layout_height="fill_parent"
    	    	    	    android:background="@color/blue"
    	    	    	    android:layout_weight="1">
    	    	    	    	<ImageView
		    	    	    	    android:layout_width="wrap_content"
		    	    	    	    android:layout_height="wrap_content"
		    	    	    	    android:background="@drawable/profile_map"
		    	    	    	    android:layout_centerInParent="true"/>
    	    	    	</RelativeLayout>
    	    	</LinearLayout>
    	    	<GridView
    	    	    android:id="@+id/shop_gridview_people"
    	    	    android:layout_width="fill_parent"
    	    	    android:layout_height="100dip"
    	    	    android:background="@color/red"/>
    	</LinearLayout>
</LinearLayout>
